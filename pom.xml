	<artifactId>OceanTea-HarvesterService</artifactId>
	<version>6.4.0-SNAPSHOT</version>

	<packaging>war</packaging>

	<name>OceanTEA Harvester Service</name>

	<description>
		A restful harvester for the TimeSeries data provided
		by the OceanTEA demo at http://maui.se.informatik.uni-kiel.de:9090/
	</description>
	<inceptionYear>2018</inceptionYear>

	<developers>
		<developer>
			<name>Ingo Thomsen</name>
			<email>int@informatik.uni-kiel.de</email>
			<organization>Kiel University</organization>
			<organizationUrl>http://www.uni-kiel.de/index-e.shtml</organizationUrl>
		</developer>
	</developers>

	<!-- Define Sonatype repository for retrieving SNAPSHOT versions -->
	<repositories>
		<repository>
			<id>Sonatype</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots/</url>
		</repository>
	</repositories>


	<!-- Dependendcies for BDD testing --> 
	<dependencies>

		<dependency>
			<groupId>com.tngtech.jgiven</groupId>
			<artifactId>jgiven-junit</artifactId>
			<version>0.15.3</version>
			<scope>test</scope>


			<!--
		<systemProperties>
		    <property>
			<name>/log4j.configuration</name>
			<value>logback.xml</value>
		    </property>
		</systemProperties>
-->

		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
			<version>3.9.1</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>com.tngtech.java</groupId>
			<artifactId>junit-dataprovider</artifactId>
			<version>1.10.0</version>
			<scope>test</scope>
		</dependency>

