	</dependencies>

	<build>
		<plugins>

			<!-- configuring surefire to run BBD tests -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.21.0</version>
				<configuration>

					<!--					<testFailureIgnore>true</testFailureIgnore> -->

					<systemPropertyVariables combine.children="append">
						<jgiven.report.text>true</jgiven.report.text>
						<jgiven.report.dir>${project.build.directory}/bdd-reports/json</jgiven.report.dir>
					</systemPropertyVariables>					

					<includes>
						<include>**/bdd/scenarios/**.java</include>
					</includes>
				</configuration>
			</plugin>			

			<plugin>
				<groupId>com.tngtech.jgiven</groupId>
				<artifactId>jgiven-maven-plugin</artifactId>
				<version>0.15.3</version>
				<executions>
					<execution>
						<phase>surefire-report</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
				</executions>

				<configuration>
					<format>html</format>
					<title>${project.name}: BDD Report</title>
					<sourceDirectory> ${project.build.directory}/bdd-reports/json</sourceDirectory>
					<outputDirectory> ${project.build.directory}/bdd-reports/html</outputDirectory>
					<!--					<ignoreResultFailures>true</ignoreResultFailures> -->
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>

